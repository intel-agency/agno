{
    "configurations": [
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python Debugger: Python File (uv run)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Debug quickstart/agent.py (uv)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/quickstart/agent.py",
            "cwd": "${workspaceFolder}/quickstart",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Debug (uv - WSL)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "args": [],
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
    ]
}